{
  "name": "solin",
  "version": "0.1.0",
  "description": "Advanced Solidity static analysis tool combining linting and security detection",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "solin": "dist/cli.js"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && node scripts/build.js --prod",
    "build:dev": "tsc && node scripts/build.js",
    "build:watch": "tsc && node scripts/build.js --watch",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint lib test --ext .ts",
    "lint:fix": "eslint lib test --ext .ts --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist coverage .solin-cache",
    "benchmark": "npx ts-node scripts/benchmark.ts",
    "server": "node dist/api/server.js",
    "server:rest": "REST_ENABLED=true node dist/api/server.js",
    "server:ws": "WS_ENABLED=true node dist/api/server.js",
    "server:all": "REST_ENABLED=true WS_ENABLED=true GRPC_ENABLED=true node dist/api/server.js",
    "mcp-server": "node dist/mcp/server.js",
    "grpc-server": "node dist/grpc/server.js",
    "prepare": "husky install",
    "prepublishOnly": "npm run clean && npm run build && npm test"
  },
  "keywords": [
    "solidity",
    "linter",
    "security",
    "static-analysis",
    "ethereum",
    "smart-contracts",
    "analyzer",
    "detector",
    "vulnerability",
    "mcp",
    "model-context-protocol",
    "claude",
    "ai-tools",
    "chatgpt",
    "rest-api"
  ],
  "mcp": {
    "server": {
      "command": "node",
      "args": ["dist/mcp/server.js"]
    }
  },
  "author": "Solin Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/0xmhha/solin.git"
  },
  "bugs": {
    "url": "https://github.com/0xmhha/solin/issues"
  },
  "homepage": "https://github.com/0xmhha/solin#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.14.1",
    "@grpc/proto-loader": "^0.8.0",
    "@modelcontextprotocol/sdk": "^1.22.0",
    "@solidity-parser/parser": "^0.20.2",
    "ajv": "^8.12.0",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "cosmiconfig": "^9.0.0",
    "crypto-js": "^4.2.0",
    "glob": "^10.3.10",
    "ignore": "^5.3.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "esbuild": "^0.19.11",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.6.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "jest --findRelatedTests"
    ],
    "*.{js,json,md}": [
      "prettier --write"
    ]
  }
}
